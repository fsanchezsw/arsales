<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SaleActivity">

    <ImageView
            android:layout_height="400dp"
            android:id="@+id/iv_image"
            tools:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" android:layout_width="match_parent"
            android:layout_marginTop="16dp" android:elevation="8dp"/>
    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentBottom="true"
            tools:text="25.99€" android:textColor="@color/colorPrimary"
            android:textSize="36sp" android:layout_marginBottom="49dp"/>
    <TextView
            android:id="@+id/tv_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_price"
            android:layout_alignParentBottom="true" android:layout_marginBottom="69dp"
            android:textSize="18sp" tools:text="29.99€ " android:layout_marginRight="-50dp"/>
    <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_above="@+id/tv_price"
            android:layout_alignLeft="@+id/tv_price" tools:text="-30%" android:textStyle="bold"
            android:textSize="18sp"/>
    <Button
            android:id="@+id/bv_buy" android:text="comprar"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_alignParentRight="true" android:layout_marginRight="18dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textAllCaps="true"
            android:textColor="@color/colorPrimary" android:textSize="18sp" android:layout_marginBottom="8dp"
            android:onClick="goToSaleUrl"/>
    <TextView
            android:id="@+id/tv_name"
            android:layout_width="250dp"
            android:layout_height="46dp" android:layout_alignLeft="@+id/tv_price"
            android:layout_alignBottom="@+id/tv_price"
            android:textAllCaps="true" tools:text="bermudas hawainas de temporada"
            android:textSize="18sp" android:textStyle="bold" android:layout_marginBottom="-40dp"/>
</RelativeLayout>